{
  "name": "gtg-project",
  "version": "1.0.0",
  "description": "GTG",
  "main": "index.js",
  "scripts": {
    "build:css": "sass scss/style.scss:css/style.css --style=compressed",
    "minify-js": "terser js/script.js -o js/script.min.js --source-map",
    "build": "npm run build:css && npm run minify-js",
